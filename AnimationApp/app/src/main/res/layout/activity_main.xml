<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay1"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button android:background="@drawable/btnshape" android:id="@+id/btnRotate" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Rotate"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/btnBlink" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Blink"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/zoomin" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="zoom in"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/zoomout" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="zoom out"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/fadeIn" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="FadeIn"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/fadeOut" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="fade out"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/move" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="move"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/flip" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="flip"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/bounch" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="bounc"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/sequncitial" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="sequncitial"/>

    <TextView android:id="@+id/textview1" android:layout_height="wrap_content" android:layout_width="100dp" android:text="welcome" android:layout_gravity="center_horizontal"/>

    <Button android:background="@drawable/btnshape" android:id="@+id/click" android:layout_height="100dp" android:layout_width="100dp" android:text="click" android:onClick="click"/>

    <ImageView android:background="@drawable/butterfly2" android:id="@+id/image1" android:layout_height="200dp" android:layout_width="200dp" android:layout_gravity="center"/>
</LinearLayout>